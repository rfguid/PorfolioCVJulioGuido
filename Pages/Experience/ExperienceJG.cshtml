<script>
  // Ocultamos todos los certificados al cargar la página
  const certificados = document.querySelectorAll(".CertificadosOcultos");
  certificados.forEach(div => div.style.display = "none");

  // Agregamos el evento al botón
  const boton = document.getElementById("vCertificadosOcultos");
  let visibles = false;

  boton.addEventListener("click", function () {
    visibles = !visibles; // alternar estado

    certificados.forEach(div => {
      div.style.display = visibles ? "block" : "none";
    });

    boton.textContent = visibles ? "Ver menos" : "Ver más";
  });
</script>