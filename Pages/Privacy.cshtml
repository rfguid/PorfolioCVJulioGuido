<!-- Contenido -->
<div class="container mt-5 mb-5">
    <div class="row g-4 align-items-center">

        <!-- Información -->
        <div class="col-md-5">
            <h3 class="mb-4">Información de contacto</h3>
            <p><i class="bi bi-envelope-fill text-primary"></i> <strong>Correo:</strong> rafaelj10@eccrosa.com</p>
            <p><i class="bi bi-telephone-fill text-primary"></i> <strong>Teléfono:</strong> +505 8888 8888</p>
            <p><i class="bi bi-geo-alt-fill text-primary"></i> <strong>Ubicación:</strong> Managua, Nicaragua</p>

            <div class="d-flex gap-3 mt-4">
                <a href="https://linkedin.com" target="_blank" class="text-primary fs-4"><i class="bi bi-linkedin"></i></a>
                <a href="https://github.com" target="_blank" class="text-dark fs-4"><i class="bi bi-github"></i></a>
                <a href="mailto:rafaelj10@eccrosa.com" class="text-danger fs-4"><i class="bi bi-envelope"></i></a>
            </div>
        </div>

        <!-- Formulario -->
        <div class="col-md-7">
            <div class="card shadow border-0">
                <div class="card-body p-4">
                    <h4 class="mb-3 text-center">Envíame un mensaje</h4>

                    <form action="https://formspree.io/f/xanljeak" method="POST">
                        <div class="mb-3">
                            <label for="nombre" class="form-label">Nombre</label>
                            <input type="text" id="nombre" name="nombre" class="form-control" required>
                        </div>

                        <div class="mb-3">
                            <label for="correo" class="form-label">Correo electrónico</label>
                            <input type="email" id="correo" name="correo" class="form-control" required>
                        </div>

                        <div class="mb-3">
                            <label for="mensaje" class="form-label">Mensaje</label>
                            <textarea id="mensaje" name="mensaje" rows="4" class="form-control" required></textarea>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-lg">Enviar mensaje</button>
                        </div>
                    </form>
                    <p class="text-success mt-3" id="msgSuccess" style="display:none;">
                     ¡Mensaje enviado correctamente, me pondré en contacto contigo lo mas pronto posible!
                    </p>

                </div>
            </div>
        </div>

    </div>
</div>
<script>
    const form = document.querySelector('form');
    form.addEventListener('submit', async (e) => {
        e.preventDefault();
        const response = await fetch(form.action, {
            method: 'POST',
            body: new FormData(form),
            headers: { 'Accept': 'application/json' }
        });
        if (response.ok) {
            form.reset();
            document.getElementById('msgSuccess').style.display = 'block';
        }
    });
</script>